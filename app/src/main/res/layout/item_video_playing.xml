<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="1dp"
    android:background="@color/black"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtVideoDuration"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/layout_left">

        <TextView
            android:id="@+id/txtVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="3dp"
            android:maxLines="2"
            android:text="You Belong With me that mean you alway belong with me"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVideoPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtVideoTitle"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="3dp"
            android:singleLine="true"
            android:text="hello this is the path of the video"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/btn_remove_to_playingList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="6dp"
        app:materialIcon="close"
        app:materialIconColor="@color/white"
        app:materialIconSize="20dp" />


</RelativeLayout>