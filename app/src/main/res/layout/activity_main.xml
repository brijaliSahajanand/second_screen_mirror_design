<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical">

    <include layout="@layout/tollbar1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/iv_video"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">


                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_main_video" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/text_medium"
                            android:includeFontPadding="false"
                            android:text="Video Player"
                            android:textColor="@color/sec_text_color"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iv_audio"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">


                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_main_audio" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/text_medium"
                            android:includeFontPadding="false"
                            android:text="Audios"
                            android:textColor="@color/sec_text_color"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>


                </LinearLayout>

                <include layout="@layout/layout_native_ads" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/iv_playlist"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">


                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_main_playlsit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/text_medium"
                            android:includeFontPadding="false"
                            android:text="Playlist"
                            android:textColor="@color/sec_text_color"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iv_photo"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">


                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_main_photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/text_medium"
                            android:includeFontPadding="false"
                            android:text="Image"
                            android:textColor="@color/sec_text_color"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>


        <com.ads.adsdemosp.AdsView.BannerAdsView
            android:id="@+id/bottomview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>